<div class="bookviewwrapper">
    <h2><%= book.title %></h2>
    <img width="100" height="150" src="<%= book.coverImagePath %>">
    <div class="bookinfo">
        <div class="infosnippet">Author: <%= book.author.name %></div>
        <div class="infosnippet">Publish Date: <%= book.publishDate.toDateString() %></div>
        <div class="infosnippet">Page Count: <%= book.pageCount %></div>
        <div class="infosnippet">Description: <%= book.description %></div>
    </div>

    <div class="bookviewactions">
    <div class="bookactionbtn"><a href = "/books/<%=book.id%>/edit" class="btn btn-warning">Edit</a></div> 

    <div class="bookactionbtn"><a href ="/authors/<%=book.author.id%>" class="btn btn-primary">View Author</a></div>

    <div class="bookactionbtn">
            <form method="POST" action="/books/<%= book.id %>?_method=DELETE">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>